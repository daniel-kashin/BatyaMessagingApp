<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.batyamessagingapp.activity.dialog.DialogActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/primary_semi_light"
        android:id="@+id/rrr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/sendMessageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="150dp"
            android:minHeight="50dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/sendMessageButtonLayout"
            android:hint="@string/messageHint"
            android:layout_marginStart="20dp" />
        <RelativeLayout
            android:id="@+id/sendMessageButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/sendMessageEditText">
        <Button
            android:visibility="invisible"
            android:alpha="0"
            android:id="@+id/sendMessageButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="15dp"
            android:src="@color/primary_dark"
            android:layout_margin="5dp"
            android:text="Button"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

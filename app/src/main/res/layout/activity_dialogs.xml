<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dialogs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.batyamessagingapp.activity.dialogs.view.DialogsActivity">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/dialogs_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/dialogs_main_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <android.support.v7.widget.Toolbar
                android:id="@+id/dialogs_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/indigo_400"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppTheme.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:titleTextColor="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                        android:id="@+id/dialogs_toolbar_label"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_toStartOf="@+id/dialogs_toolbar_forward_icon"/>

                    <EditText
                        android:visibility="invisible"
                        android:id="@+id/dialogs_toolbar_edit_text"
                        android:hint="Username"
                        android:background="@android:color/transparent"
                        android:textColorHint="@color/indigo_100"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/dialogs_toolbar_forward_icon" />

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/dialogs_toolbar_forward_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/vector_forward"/>
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/dialogs_toolbar_refresh_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="15dp"
                        android:background="@mipmap/vector_refresh"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/dialogs_toolbar" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialogs_drawer_recycler_view"
            android:layout_width="@dimen/drawer_list_view_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/white"
            android:paddingTop="10dp" />

    </android.support.v4.widget.DrawerLayout>
</FrameLayout>
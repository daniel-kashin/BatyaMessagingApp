<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context="com.example.batyamessagingapp.view.AuthenticationActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                style="@style/MainIcon"
                android:id="@+id/sc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/logo_margin_bottom"
                android:layout_marginTop="@dimen/logo_margin_top"
                android:gravity="center"
                android:text="@string/startup_name"
                android:textSize="@dimen/logo_size"
                android:textStyle="bold"
                android:typeface="monospace" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/AppTheme.TextErrorAppearance"
                android:id="@+id/usernameTextInputLayout"
                app:errorEnabled="true">

                <android.support.v7.widget.AppCompatEditText
                android:id="@+id/usernameEditText"
                style="@style/AuthInput"
                android:hint="@string/username"
                android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/AppTheme.TextErrorAppearance"
                android:id="@+id/passwordTextInputLayout"
                app:errorEnabled="true">

                <android.support.v7.widget.AppCompatEditText
                android:id="@+id/passwordEditText"
                style="@style/AuthInput"
                android:hint="@string/password"
                android:inputType="textPassword" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/linear_layout_padding_bottom">

                <Button
                    android:id="@+id/authButton"
                    style="@style/AuthButton"
                    android:layout_marginRight="6dp"
                    android:text="Log in" />

                <Button
                    android:id="@+id/registrationButton"
                    style="@style/AuthButton"
                    android:layout_marginLeft="6dp"
                    android:text="Sign up" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
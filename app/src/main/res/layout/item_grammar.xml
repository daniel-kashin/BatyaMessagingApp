<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="15dp"
              android:background="@drawable/item_pressed"
              android:paddingBottom="30dp"
    android:paddingStart="25dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <TextView
            android:id="@+id/grammar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last 30 days"
            android:textColor="@color/primary_text"
            android:textSize="23dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/grammar_total"
            android:layout_marginTop="5dp"
            android:text="1555 words total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/grammar_correct"
            android:text="1000 words correct"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/grammar_percent"
            android:textSize="23dp"
            android:textStyle="bold"
            android:text="73%"
            android:textColor="@color/indigo_400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/indigo_400"
            android:layout_marginTop="5dp"
            android:text="Literacy"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
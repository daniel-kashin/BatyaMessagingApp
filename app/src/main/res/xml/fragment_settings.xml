<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="Account">
        <android.support.v7.preference.Preference
            android:summary="Id (cannot be changed)"
            android:key="id"/>
        <android.support.v7.preference.Preference
            android:summary="Username"
            android:key="change_username"/>
        <android.support.v7.preference.Preference
            android:title="Change password"
            android:key="change_password"/>
    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="Log out">
        <android.support.v7.preference.Preference
            android:title="Current device"
            android:key="log_out_current"/>
        <android.support.v7.preference.Preference
            android:title="All active devices"
            android:key="log_out_all"/>
    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="Support">
        <android.support.v7.preference.Preference
            android:title="Official website"
            android:summary="Will be added soon"
            android:key="website"/>
        <android.support.v7.preference.Preference
            android:title="Privacy policy"
            android:summary="Will be added soon"
            android:key="privacy"/>
    </android.support.v7.preference.PreferenceCategory>
</android.support.v7.preference.PreferenceScreen>
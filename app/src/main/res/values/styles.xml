<resources>

    <style name="MainIcon" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="AuthInput" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/auth_input_height</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/indigo_100</item>
        <item name="android:paddingRight">15dp</item>
        <item name="colorControlNormal">@color/indigo_100</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>



    <style name="AuthButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/auth_button</item>
        <item name="android:textColor">@color/indigo_100</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/auth_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/auth_button_text_size</item>
    </style>



    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>







    <style name="Widget.Design.TextInputLayout" parent="AppTheme">
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
        <item name="errorTextAppearance">@style/AppTheme.TextErrorAppearance</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow</item>
        <item name="android:textColorHint">@color/indigo_100</item>
        <item name="android:textColorHighlight">@color/indigo_100</item>
        <item name="android:textColorHighlightInverse">@color/white</item>
        <item name="android:textSize">@dimen/auth_input_text_size</item>
        <item name="android:layout_marginBottom">@dimen/auth_input_margin_bottom</item>
    </style>
    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="AppTheme.TextErrorAppearance" parent="TextAppearance.Design.Error">
        <!-- Error chatMessage appearance here -->
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="MessageInput" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:hint">@string/messageHint</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHighlight">@android:color/transparent</item>
        <item name="android:textColorHighlightInverse">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="colorControlNormal">@color/indigo_100</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

</resources>

